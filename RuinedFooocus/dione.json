{
    "dependencies": {
      "git": {
        "version": "latest"
      },
      "uv": {
        "version": "latest"
    }
  },
  "installation": [
    {
      "name": "Cloning RuinedFooocus repository",
      "commands": [
        "git clone https://github.com/runew0lf/RuinedFooocus.git RuinedFooocus"
      ]
    },
    {
      "name": "Installing all requirements and dependencies",
      "env": {
        "name": "RuinedFooocus/env",
        "version": "3.10"
      },
      "commands": [
      "cd RuinedFooocus",
      "uv pip install pip setuptools wheel",
      "uv pip install -r requirements_versions.txt",
      "uv pip install -r pip/modules.txt",
      "uv pip install torch==2.8.0 torchvision==0.23.0 torchaudio==2.8.0 --index-url https://download.pytorch.org/whl/cu128"

      ]
    }
  ],
  "start": [
    {
      "name": "Starting RuinedFooocus",
      "catch": "7860",
      "env": "RuinedFooocus/env",
      "commands": [
        "cd RuinedFooocus",
        "uv run launch.py"
      ]
    }
  ]
}
