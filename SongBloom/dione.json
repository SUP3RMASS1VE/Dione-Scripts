{
  "requirements": {
    "gpus": ["nvidia"],
    "os": ["windows"]
  },
  "dependencies": {
    "git": { "version": "latest" },
    "uv": { "version": "latest" }
  },
  "installation": [
    {
      "name": "Cloning SongBloom repository",
      "commands": [
        "git clone https://github.com/SUP3RMASS1VE/SongBloom--Windows.git SongBloom"
      ]
    },
    {
      "name": "Installing PyTorch with CUDA support and Flash Attention",
      "env": { "name": "env", "version": "3.10", "type": "uv" },
      "commands": [
        "cd SongBloom",
        "uv pip install pip",
        "uv pip install torch==2.7.0 torchvision==0.22.0 torchaudio==2.7.0 --index-url https://download.pytorch.org/whl/cu128",
        "uv pip install https://huggingface.co/lldacing/flash-attention-windows-wheel/resolve/main/flash_attn-2.7.4.post1%2Bcu128torch2.7.0cxx11abiFALSE-cp310-cp310-win_amd64.whl"
      ]
    },
    {
      "name": "Installing requirements",
      "env": { "name": "env", "version": "3.10", "type": "uv" },
      "commands": [
        "cd SongBloom",
        "uv pip install -r requirements.txt"
      ]
    }
  ],
  "start": [
    {
      "name": "Starting SongBloom",
      "catch": "7860",
      "env": "env",
      "commands": [
        "cd SongBloom",
        "python app.py"
      ]
    }
  ]
}
