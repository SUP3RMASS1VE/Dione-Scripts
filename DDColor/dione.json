{
  "requirements": {
    "gpus": ["nvidia", "amd"],
    "os": ["windows", "linux", "mac"]
  },
  "dependencies": {
    "git": { "version": "latest" },
    "uv": { "version": "latest" }
  },
  "installation": [
    {
      "name": "Cloning DDColor repository",
      "commands": [
        "git clone https://github.com/ai-anchorite/DDColor.git DDColor"
      ]
    },
    {
      "name": "Installing PyTorch with CUDA support",
      "env": { "name": "env", "version": "3.10", "type": "uv" },
      "commands": [
        "cd DDColor",
        "uv pip install pip",
        {
          "platform": "windows",
          "command": "uv pip install torch==2.7.0 torchvision==0.22.0 torchaudio==2.7.0 --index-url https://download.pytorch.org/whl/cu128"
        },
        {
          "platform": "linux",
          "command": "uv pip install torch==2.7.0 torchvision==0.22.0 torchaudio==2.7.0 --index-url https://download.pytorch.org/whl/cu128"
        },
        {
          "platform": "mac",
          "command": "uv pip install torch torchvision torchaudio"
        }
      ]
    },
    {
      "name": "Installing dlib",
      "env": { "name": "env", "version": "3.10", "type": "uv" },
      "commands": [
        "cd DDColor",
        {
          "platform": "windows",
          "command": "uv pip install https://github.com/z-mahmud22/Dlib_Windows_Python3.x/raw/main/dlib-19.22.99-cp310-cp310-win_amd64.whl"
        },
        {
          "platform": "linux",
          "command": "uv pip install dlib==19.24.2"
        },
        {
          "platform": "mac",
          "command": "uv pip install dlib==19.24.2"
        }
      ]
    },
    {
      "name": "Installing requirements",
      "env": { "name": "env", "version": "3.10", "type": "uv" },
      "commands": [
        "cd DDColor",
        "uv pip install -r requirements.txt"
      ]
    }
  ],
  "start": [
    {
      "name": "Starting DDColor",
      "catch": "7860",
      "env": "env",
      "commands": [
        "cd DDColor",
        "python gradio_app.py"
      ]
    }
  ]
}
