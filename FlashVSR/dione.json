{
  "requirements": {
    "os": ["windows"],
    "gpus": ["nvidia"]
  },
  "dependencies": {
    "git": { "version": "latest" },
    "uv": { "version": "latest" }
  },
  
  "installation": [
    {
      "name": "Cloning FlashVSR_plus repository",
      "commands": [
        "git clone https://github.com/ai-anchorite/FlashVSR_plus.git FlashVSR_plus"
      ]
    },
    {
      "name": "Installing PyTorch and dependencies",
      "env": { "name": "env", "version": "3.10" },
      "commands": [
        "cd FlashVSR_plus",
        { "platform": "windows", "gpu": "nvidia", "command": "uv pip install torch==2.9.0 torchvision==0.24.0 --index-url https://download.pytorch.org/whl/cu128 --force-reinstall" },
        { "platform": "windows", "gpu": "nvidia", "command": "uv pip install triton-windows==3.5.0.post21" },
        { "platform": "windows", "gpu": "nvidia", "command": "uv pip install https://github.com/woct0rdho/SageAttention/releases/download/v2.2.0-windows.post4/sageattention-2.2.0+cu128torch2.9.0andhigher.post4-cp39-abi3-win_amd64.whl" }
      ]
    },
    {
      "name": "Installing project requirements",
      "env": "env",
      "commands": [
        "cd FlashVSR_plus",
        "uv pip install -r requirements.txt"
      ]
    }
  ],
  
  "start": [
    {
      "name": "Starting FlashVSR+ WebUI",
      "catch": "7860",
      "env": "env",
      "commands": [
        "cd FlashVSR_plus",
        "python webui.py"
      ]
    }
  ]

}
